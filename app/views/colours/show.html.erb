<% content_for :body_class, "show-colour" %>
<div class="container text-center edit-colour-holder" style="background-colour: <%= @colour.hexcode %>">
	
	<div class="jumbotron">
		<h2>
		  <%= @colour.name %>
		</h2>
	
		<h2 class="large">
		  <%= @colour.hexcode %>
		</h2>
	</div>

</div>


<div class="nav-subnav text-center">
	<% if @colour.user == current_user %>
		<%= link_to 'Edit', edit_colour_path(@colour) %>
	<% end %>
	<%= link_to 'Back', colours_path %>
</div>